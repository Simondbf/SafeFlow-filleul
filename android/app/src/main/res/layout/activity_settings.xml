<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <!-- Version Text -->
    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SafeFlow v1.0"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp" />

    <!-- Discord Button -->
    <Button
        android:id="@+id/btnDiscord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rejoindre Discord"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="#5865F2"
        android:paddingVertical="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvVersion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp" />

    <!-- Danger Zone Section -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        app:layout_constraintBottom_toTopOf="@id/tvDangerZone"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/tvDangerZone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ZONE DANGEREUSE"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#D32F2F"
        app:layout_constraintBottom_toTopOf="@id/btnDangerZone"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnDangerZone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DÉSACTIVER / DÉSINSTALLER"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="#D32F2F"
        android:paddingVertical="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="40dp" />

</androidx.constraintlayout.widget.ConstraintLayout>